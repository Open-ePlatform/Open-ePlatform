@CHARSET "ISO-8859-1";

.query .input-error .error {
	display: flex;
	align-items: center;
	margin-top: 8px;
} 

.query .input-error .error i {
	margin: unset;
	margin-right: 5px;
	
	display: inline-block;
	position: relative;
	right: 0;
	bottom: 0;
	width: unset;
	height: unset;
}

@media screen and (max-width: 767px) {
	.childquery .input-error i {
		display: block;
		pointer-events: none;
		position: static;
		height: auto;
		width: auto;
		margin: auto;
	}
	
	.childquery .input-error i::after {
	    float: right;
	    content: attr(title);
	    font-family: "Source Sans Pro",sans-serif;
	    font-size: 14px;
	    font-weight: 600;
	    margin-top: 8px;
	    margin-right: 5px;
	}
 
  	.childquery .input-error input {
		padding: 12px !important;
	}
}

.childquery label.radio {
	padding-bottom: 0px;
}

.childquery label.radio p.tiny {
	font-weight: 400;
}

.childquery .alternative {
	padding: 10px;
	padding-top: 0px;
	margin-top: 10px;
	margin-bottom: 10px;
	background: rgba(255,239,159,0.5);
	border: 1px solid #787878;
	border-radius: 10px;
	cursor: pointer;
}

.childquery .alternative:has(input[type="radio"]:disabled) {
	cursor: default;
}

.childquery .alternative:has(label.disabled) {
	background: #F2F2F2;
	border-color: #8F8F8F;
}

.childquery .alternative:has(input[type=radio]:checked) {
	outline: 1px solid #000000;
}
	
.childquery .alternative label {
	padding-top: 0px !important;
}

.childquery.floatnone {
    float: none;
}

.childquery .validationerror i {
    margin: unset;
    margin-right: 5px;
    display: inline-block;
    position: relative;
    right: 0;
    bottom: 4px;
    width: unset;
    height: unset;
}

@media screen and (min-width: 767px) {
	.childquery .alternative {
		float: left;
		width: auto;
		min-width: 200px;
	}
	
	/* Left */
	.childquery .alternative:nth-child(2n+1) {
		margin-right: 20px;
		clear: both;
	}
}

@media screen and (max-width: 1004px) {
	.childquery.show-mode table,
	.childquery.show-mode table > thead,
	.childquery.show-mode table > tbody,
	.childquery.show-mode table th,
	.childquery.show-mode table tr,
	.childquery.show-mode table td {
		display: block;
	}
	.childquery.show-mode table > thead,
	.childquery.show-mode table > thead > th {
		position: absolute;
		top: -9999px;
		left: -9999px;
	}
	.childquery.show-mode table > tbody {
		width: 100%;
	}
	.childquery.show-mode table > tbody > tr {
		width: 100%;
		border: 1px solid #e7e7e7;
		margin-bottom: 16px;
		box-shadow: 0 -3px #424242;
	}
	.childquery.show-mode table > tbody > tr > td {
		width: 96%;
		padding: 8px 2%;
		border: 0;
		background: #f7f7f7;
		font-weight: 400;
	}
	.childquery.show-mode table > tbody > tr > td[data-title]:before {
		float: left;
		display: block;
		content: attr(data-title);
		width: 45%;
		font-weight: 600;
	}
	.childquery.show-mode table > tbody > tr > td div {
		overflow: hidden;
	}
	.childquery.show-mode table > tbody > tr > td:nth-child(2n+1) {
		background: #fff;
	}
}