#showflow > .errand-menu,
#showflow > section > .section-inside.step,
#showflow > section > .section-inside.header-full,
#showflow > section > .divider {
	display: none;
}

#showflow section.service.child {
	border-right: 0px;
}

#showflow .editbutton {
	text-align: right;
	padding-bottom: 18px;
}

#showflow .editbutton a {
	display: inline-block;
}

#UserFlowInstanceModule,
#UserFlowInstanceModule section {
	padding-bottom: 0;
}

.userflowinstances .errands-wrapper.header-title {
	padding-bottom: 0;
	margin-bottom: 0;
}

.userflowinstances .errands-wrapper > h1 {
	padding: 10px 0 0px 0;
	font-size: 22px;
}

/* Overrides */
.errands-wrapper .oep-table {
	overflow-wrap: anywhere;
}

/* Only readable for screen readers, visually hidden */
.screen-reader-only {
	position:absolute;
	left:-10000px;
	top:auto;
	width:1px;
	height:1px;
	overflow:hidden;
}

/* ========== MOBILE ========== */
@media screen and (max-width: 767px) {
  .tabs {
    padding: 30px 0 0 49px;
  }
  .tabs li {
    float: unset;
    margin: 0 10px 0 0;
    width: auto;
  }
  .tabs li a {
    width: auto;
    box-sizing: initial;
    position: initial;
    padding: 12px 20px;
    /* Hide text */
    font-size: 1px;
    letter-spacing: -1px;
    color: transparent;
  }
  .tabs li a:before {
  /* Still show icon */
    color: #424242;
    font-size: 18px;
  }
  .tabs li a .count {
    left: 0;
    margin-left: -66px;
  }
  .tabs li a:hover {
    padding: 12px 20px;
    color: transparent;
  }
  .tabs li.ui-state-active a {
    padding: 17px 20px;
  }
}